.shelves-content {
 /* border: 1rpx solid darkgray; */
 width: 100%;
 margin-top: 1rem;
 /* font-size: 20rpx; */

  
  
}
.shelves-content .tr {
 display: flex;
 width: 100%;
 justify-content: center;
 height: 3rem;
 align-items: center;

}
.shelves-content .td {
  width:11%;
  justify-content: center;
  display: flex;
  text-align: center;
  /* border-right: 1px solid #ddd; */
  height: 100%;
}


.shelves-content .bg-w{
 background: #afb4db;
  
}
.shelves-content .th {
 width: 98%;
 justify-content: center;
 color: #fff;
 display: flex;
 height: 3rem;
 align-items: center;
 border-right: 1rpx solid #ddd;
}
.shelves-content .th-2 {
 width: 60%;
 justify-content: center;
 color: #fff;
 display: flex;
 height: 3rem;
 align-items: center;
 max-height: 3rem;
 max-width: 80%;
}


.row1 {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #DCDFE6;
  
}

.row1 .td {
  
  padding: 11rpx;
 
}

.row1 .column2-wrapper {
  display: flex;
  flex-direction: column;
  flex: 3;
  justify-content: center;
  border-left: 1rpx solid #DCDFE6;
}

.row1 .column2 {
  display: flex;
  flex: 1;
  align-items: center;
  border-bottom: 1rpx solid #DCDFE6;
}

.row1 .column2:last-child{
  border-bottom: none;
}



.date-icon{
  width: 80rpx;
  height: 80rpx;
}

